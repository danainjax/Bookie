<%= form_for @book  do |f| %>
  <%= f.label 'Book title' %><br>
  <%= f.text_field :title %><br>

  <%= f.label 'Author' %><br>
  <%= f.text_field :author %><br>

  <%= f.label 'Short One-line synopsis' %><br>
  <%= f.text_field :short_synopsis %><br>

  <%= f.label 'Summary' %><br>
  <%= f.text_area :summary %><br>

  <%= f.label 'Pages' %><br>
  <%= f.text_field :pages%><br>

  <%= f.submit "Submit Book" %>
<% end %>