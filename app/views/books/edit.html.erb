<%= form_for @book  do |f| %>
  <%= f.label 'Book title' %><br>
  <%= f.text_field :title %><br>

  <%= f.label 'Author' %><br>
  <%= f.text_field :author %><br>

  <%= f.label 'Publisher' %><br>
  <%= f.text_field :publisher %><br>

  
  <%= f.label 'Description' %><br>
  <%= f.text_area :description %><br>
  <hr />

  <%= f.label 'Pages' %><br>
  <%= f.text_field :pages%><br>

  <%= f.submit "Submit Book" %>
<% end %>